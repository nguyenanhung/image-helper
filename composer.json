{
    "type": "library",
    "name": "nguyenanhung/image-helper",
    "description": "Image helper, library - Basic, Simple and Lightweight",
    "keywords": [
        "image",
        "helper",
        "library",
        "php"
    ],
    "homepage": "https://github.com/nguyenanhung/image-helper",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Nguyen An Hung",
            "email": "dev@nguyenanhung.com",
            "homepage": "https://nguyenanhung.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "nguyenanhung/image": ">=1.0"
    },
    "suggest": {
        "nguyenanhung/image": "For full Image Processing",
        "ext-curl": "Needed to support cURL",
        "ext-json": "Needed to support JSON",
        "ext-mcrypt": "Needed to support mcrypt",
        "ext-iconv": "Needed to support iconv",
        "ext-openssl": "Needed to support openssl"
    },
    "autoload": {
        "psr-4": {
            "nguyenanhung\\Libraries\\ImageHelper\\": "src/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    }
}
